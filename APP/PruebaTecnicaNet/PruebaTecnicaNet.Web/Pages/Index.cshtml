@page
@model IndexModel
@{
    ViewData["Title"] = "Orden de venta";
}

<form method="post">

    <div class="card">
        <div class="card-header">
            <label class="display-6">Orden de Compra</label>
        </div>
        <div class="card-body">

            <label for="customerName" class="col-m-2 col-form-label">Cliente</label>
            <div class="col-m-2">
                <input type="text" class="form-control"
                       id="customerName" name="CustomerName"
                       asp-for="CustomerName">
            </div>
            <label for="customerPhone" class="col-m-2 col-form-label">Telefono</label>
            <div class="col-m-2">
                <input type="text" class="form-control"
                       id="customerPhone" name="CustomerPhone"
                       asp-for="CustomerPhone">
            </div>

        </div>
    </div>

    <br />


    <div class="card">
        <div class="card-header">
            Productos
        </div>
        <div class="card-body">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#productsModal">
                Agregar producto
            </button>

            <!-- Modal -->
            <div class="modal fade" id="productsModal" tabindex="-1" role="dialog" aria-labelledby="productsModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="productsModalLabel">Productos</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="table table-striped" cellpadding="0" cellspacing="0">
                                <tr>
                                    <th>Producto</th>
                                    <th>Valor unidad</th>
                                    <th></th>

                                </tr>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>@product.ProductName</td>
                                        <td>@product.UnitPrice</td>
                                        <td>
                                            <input type="radio" name="idProduct" />
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Agregar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <input type="submit" class="btn btn-primary" value="Generar Compra" />

</form>